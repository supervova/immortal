<div class="e-post__reactions">
  <ul class="d-flex">
    <li><button class="e-btn" type="button" data-action="reaction-like" aria-label="Like post">👍</button></li>
    <li><button class="e-btn" type="button" data-action="reaction-sad" aria-label="React with sadness">😢</button></li>
    <li><button class="e-btn" type="button" data-action="reaction-dislike" aria-label="Dislike post">👎</button></li>
  </ul>
  <div class="e-post__reactions-count">
    {{ post.reactions_count }}
  </div>
</div>
