{# MAIN CONTENT ------------------------------------------------------------- #}
{% block content %}
<main class="e-main has-navbar">
  <div class="e-container">
    {% include "components/navbar.twig" %}

    <div class="e-main__base">
      <section class="e-stats">
        <h2 class="visually-hidden">Key Statistics</h2>

        {% for stat in stats %}
          {% include 'components/kpi.twig' with {stat: stat} %}
        {% endfor %}
      </section>

      <section class="e-posts">
        <header>
          <h2 class="h3">Posts: <span>October 2024</span></h2>
          <div class="e-posts__tabs" role="tablist">
            <button class="e-btn is-ghost" type="button" role="tab" data-target="feed-latest" aria-selected="true">
              Latest
            </button>
            <button class="e-btn is-ghost" type="button" role="tab" data-target="feed-popular">
              Popular
            </button>
          </div>
        </header>

        {# FEED #}
        {% for post in posts.march %}
          {% include 'components/post/post.twig' with {post: post} %}
        {% endfor %}

      </section>
    </div>
  </div>
</main>
{% endblock %}

