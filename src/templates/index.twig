{% block config %}
  {{ parent() }}

  {% set page = {
    body_classes: 'e-page is-home has-brand-bar'
  } %}

  {% set initial_question = {
    is_incoming: false,
    avatar: 'avatar-creator',
    content: '<p><strong>You:</strong> Is my data secure?</p>',
    send_time: '2025-02-28T15:04:00'
