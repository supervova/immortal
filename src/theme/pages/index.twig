
{% extends "pages/twig/base.twig" %}
{% from "pages/twig/macros.twig" import icon, snippet, form_item, button %}

{% block config %}
  {{ parent() }}

  {% set page = {
      lang: 'ru',
      title: 'Yey!',
      desc: site.desc.ru,
      body_classes: 'page is-home'
  } %}
{% endblock %}

{% block head %}
  {{ parent() }}

  <style>
    .header {
      display: none;
    }
  </style>
{% endblock %}

{# MAIN CONTENT ------------------------------------------------------------- #}
{% block content %}
  <main class="main">
    <div class="container">
      <h1>Welcome to my world</h1>
      <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Architecto dolores dolorum facilis, est esse illum non accusamus minus dolor harum mollitia commodi ducimus laboriosam, magni ipsa sint veniam rerum recusandae?</p>

      {{ icon('star') }}
      {{ icon('star', 'is-dummy') }}

      {{ snippet('Lorem ipsum dolor sit amet', 'Lorem ipsum dolor sit amet', 'cover.png') }}

      <form>
        <p>
          {{ form_item('My Label', 'my-input', 'text', '', 'Message') }}
        </p>
      </form>

      {{ button('My Button', false, '', false, 'submit') }}
    </div>
  </main>
{% endblock %}
